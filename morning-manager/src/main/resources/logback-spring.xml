    <!-- 开发环境. -->
    <springProfile name="dev">
        <root level="${logLevel}">
            <appender-ref ref="consoleLog"/>
            <!--<appender-ref ref="logstash"/>-->
        </root>
    </springProfile>

    <!-- 测试环境,生产环境-->
    <springProfile name="test,prod">
        <root level="${logLevel}">
            <appender-ref ref="fileLog"/>
        </root>
    </springProfile>
</configuration>