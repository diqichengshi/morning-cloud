<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.morning.shop.product.dao.KindMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.morning.common.service.shop.product.entity.Kind">
        <id column="id" property="id"/>
        <result column="kind_id" property="kindId"/>
        <result column="product_id" property="productId"/>
        <result column="type" property="type"/>
        <result column="name" property="name"/>
        <result column="pic_img" property="picImg"/>
        <result column="show_price" property="showPrice"/>
        <result column="status" property="status"/>
        <result column="sort" property="sort"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        kind_id AS kindId, product_id AS productId, name,status, sort, create_time AS createTime, create_by AS createBy, update_time AS updateTime, update_by AS updateBy
    </sql>

    <select id="queryProductKindList" resultType="com.morning.common.service.shop.product.dto.KindDTO">
		SELECT
			kind_id as kindId,
			name as kindName,
			pic_img as picImg,
			show_price as showPrice
		FROM
			os_kind
		WHERE
			product_id =#{productId}
	</select>
</mapper>
